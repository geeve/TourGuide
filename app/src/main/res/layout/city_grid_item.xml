<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/city_grid_item_padding"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_gravity="center"
        android:scaleType="fitXY"

        android:id="@+id/city_grid_item_img"
        android:src="@drawable/wuhan"
        android:layout_width="@dimen/cit_grid_item_img_width"
        android:layout_height="@dimen/city_grid_item_img_height" />
    <TextView
        android:paddingTop="@dimen/city_grid_item_tx_padding"
        android:textStyle="bold"
        android:textSize="@dimen/city_grid_item_tx_text_size"
        android:id="@+id/city_grid_item_text"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>